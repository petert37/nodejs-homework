<!doctype html>
<html lang="hu">
<head>
    <%- include('header') -%>
    <link rel="stylesheet" href="/css/clients.css">
</head>
<body>
<%- include('menu') -%>
<div class="container">
    <div class="title d-flex align-items-center justify-content-between my-4">
        <h1>Ügyfél választása</h1>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Név</th>
            <th scope="col">Telefonszám</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% clients.forEach(client => { %>
            <tr>
                <td><%= client.name %></td>
                <td><%= client.phone %></td>
                <td class="actions">
                    <form method="post">
                        <input type="hidden" name="clientId" value="<%= client._id %>">
                        <button class="btn btn-primary" type="submit">Kiválaszt</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
<%- include('footer') -%>
</body>
</html>