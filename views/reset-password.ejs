<!doctype html>
<html lang="hu">
<head>
    <%- include('header') -%>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
<div class="title">
    <h1>Autókölcsönző</h1>
</div>
<div class="login-box">
    <div class="login-title">
        <h1>Jelszó helyreállítása</h1>
        <a class="text-body font-weight-bold" href="/login">Bejelentkezés</a>
    </div>
    <form method="post">
        <div class="form-group">
            <label for="password">Új jelszó</label>
            <input type="password" autocomplete="new-password" class="form-control" id="password" placeholder="Jelszó">
        </div>
        <input type="hidden" name="passwordResetToken" value="<%= passwordResetToken %>">
        <button type="submit" class="btn btn-primary">Heylreállítás</button>
    </form>
</div>
<div class="placeholder"></div>
<%- include('footer') -%>
</body>
</html>