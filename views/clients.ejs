<!doctype html>
<html lang="hu">
<head>
    <%- include('header') -%>
    <link rel="stylesheet" href="/css/clients.css">
</head>
<body>
<%- include('menu') -%>
<div class="container">
    <div class="title d-flex align-items-center justify-content-between my-4">
        <h1>Ügyfelek</h1>
        <form action="/clients/new" method="get">
            <button class="btn btn-success" type="submit">Új ügyfél</button>
        </form>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Név</th>
            <th scope="col">Telefonszám</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% clients.forEach(clientInstance => { %>
            <tr>
                <td><%= clientInstance.name %></td>
                <td><%= clientInstance.phone %></td>
                <td class="actions">
                    <form action="/clients/edit/<%= clientInstance._id %>" method="get">
                        <button class="no-style-button" type="submit">
                            <i class="fas fa-edit fa-fw ml-2"></i>
                        </button>
                    </form>
                    <form action="/clients/delete/<%= clientInstance._id %>" method="post">
                        <button class="no-style-button" type="submit">
                            <i class="fas fa-trash fa-fw mx-2"></i>
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
<%- include('footer') -%>
</body>
</html>