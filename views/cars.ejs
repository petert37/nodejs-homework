<!doctype html>
<html lang="hu">
<head>
    <%- include('header') -%>
    <link rel="stylesheet" href="/css/cars.css">
</head>
<body>
<%- include('menu') -%>
<div class="container">
    <div class="title d-flex align-items-center justify-content-between my-4">
        <h1>Autók</h1>
        <form action="/cars/new" method="get">
            <button class="btn btn-success" type="submit">Új autó</button>
        </form>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Modell</th>
            <th scope="col">Gyártás éve</th>
            <th scope="col">Rendszám</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% cars.forEach(car => { %>
            <tr>
                <td><%= car.model %></td>
                <td><%= car.year %></td>
                <td><%= car.plateNumber %></td>
                <td class="actions">
                    <form action="/rents/new/<%= car._id %>" method="get">
                        <button class="btn btn-primary" type="submit">Kölcsönöz</button>
                    </form>
                    <form action="/cars/edit/<%= car._id %>" method="get">
                        <button class="no-style-button" type="submit">
                            <i class="fas fa-edit fa-fw ml-2"></i>
                        </button>
                    </form>
                    <form action="/cars/delete/<%= car._id %>" method="post">
                        <button class="no-style-button" type="submit">
                            <i class="fas fa-trash fa-fw mx-2"></i>
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
<%- include('footer') -%>
</body>
</html>